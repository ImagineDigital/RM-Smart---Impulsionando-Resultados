<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="1.0" id="com.rmsmart" ios-CFBundleVersion="1.0" version="1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
